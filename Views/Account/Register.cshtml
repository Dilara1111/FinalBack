@using Final_Back.ViewModels.Account
@model AccountRegisterVM
@section Style{
    <link rel="stylesheet" href="/assets/css/login.css">
}
<h2 style="text-align:center; padding-bottom:20px;">Register</h2>
        <div asp-validation-summary="ModelOnly" style="color:red;">
        </div>
<div class="byRuslan" style="display:flex; justify-content:center;align-items:center;">

<div class="container mt-5">
    <form asp-action="register" asp-controller="account" class="text-center">
        <!-- Fullname input -->
        <div class="form-outline mb-4">
            <label asp-for="Fullname" class="form-label"></label><br />
            <input asp-for="Fullname" class="form-control" />
            <span asp-validation-for="Fullname" style="color:red"></span>
        </div>
        <!-- Username input -->
        <div class="form-outline mb-4">
            <label asp-for="Username" class="form-label"></label><br />
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" style="color:red;"></span>
        </div>
        <!-- Email input -->
        <div class="form-outline mb-4">
            <label asp-for="Email" class="form-label"></label><br />
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" style="color:red;"></span>
        </div>
        <!-- Password input -->
        <div class="form-outline mb-4">
            <label asp-for="Password" class="form-label"></label><br />
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" style="color:red;"></span>
        </div>
        <!-- Confirm Password input -->
        <div class="form-outline mb-4">
            <label asp-for="ConfirmPassword" class="form-label"></label><br />
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" style="color:red;"></span>
        </div>
        
        <!-- 2 column grid layout for inline styling -->
        <div class="row mb-4">
            <div class="col d-flex justify-content-center">
                <!-- Checkbox -->
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
                    <label class="form-check-label" for="form2Example31"> Remember me </label>
                </div>
            </div>
        </div>


        <!-- Submit button -->
        <button type="submit" class="btn btn-primary btn-block mb-4" style="background-color:#5c9735;color:#fff">Register</button>

        <!-- Register buttons -->
        <div class="text-center">
            <p>Already have an account? <a asp-action="login" asp-controller="account">Login</a></p>
        </div>
    </form>
</div>
</div>

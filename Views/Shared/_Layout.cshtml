<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Websitedemos</title>

    @RenderSection("Style", false)

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
<body>
    <section class="container">
       @await Component.InvokeAsync("Header")
        @RenderSection("Header", false)
    </section>
    <div>
        @RenderBody()
    </div>
    <footer>
        <div class="footer">
            <a asp-controller="Home" asp-action="index" style="color:#fff">Home</a>
            <a asp-controller="Plant" asp-action="index" style="color:#fff;">Plants</a>
            <a asp-controller="About" asp-action="index" style="color:#fff;">About</a>
            <a asp-controller="Contact" asp-action="index" style="color:#fff;">Contact</a>
        </div>
        <div>
            <h3 style="color:#fff;font-size: 22px; text-align: center;">Subscribe to our newsletter</h3>
        </div>
        <div class="wp-form">
            <input type="text" style="padding: 15px 25px;" placeholder="Your Email Adress...">
            <button type="submit" style="padding:10px 30px; margin-left: 5px; background-color: #5c9735; font-size:15px">Subscribe</button>
        </div>
        <div style="display: flex; justify-content: center; text-align: center;">
            <i class="fa-brands fa-instagram" style="color: white; padding: 20px"></i>
            <i class="fa-brands fa-facebook" style="color: white; padding: 20px"></i>
            <i class="fa-brands fa-twitter" style="color: white; padding: 20px"></i>
        </div>
        <div><p style="font-size: 14px; color: #fff; text-align: center; padding: 100px 0;">© 2024 Plant Shop. Powered by Plant Shop.</p></div>
    </footer>

</body>

@using Final_Back.Models;
@model List<HomeProducts>
<div class="card">
    <div class="card-body">
        <div class="d-flex; justify-content-lg-between">
            <h5 class="card-title">Products</h5>
            <a asp-action="create" asp-controller="homeProduct" asp-area="admin" class="col-2 d-sm-inline-block btn btn-outline-success">Add new Product</a>
        </div>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Photo</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">Price</th>

                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var product in Model)
                        {
                            <tr>
                                <th>@product.Id</th>
                                <td><img style="width:100px" src="~/assets/img/@product.FilePath"></td>
                                <td>@product.Name</td>
                                <td>@product.Description</td>
                                <td>@product.Price</td>
                                <th>
                                    <a asp-controller="homeProduct" asp-action="update" asp-area="admin" asp-route-id="@product.Id" class="btn btn-secondary">Update</a>
                                    <form class="d-inline" method="post" asp-controller="homeProduct" asp-action="delete" asp-area="admin" asp-route-id="@product.Id">
                                        <button class="btn btn-secondary" type="submit">Delete</button>
                                    </form>
                                </th>

                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@using Final_Back.Models;
@model ContactInfo
<div class="card">
    <div class="card-body">
        <div class="d-flex; justify-content-lg-between">
            <h5 class="card-title">ContactInfo</h5>
            @*<a asp-action="create" asp-controller="contactInfo" asp-area="admin" class="col-2 d-sm-inline-block btn btn-outline-success">Add ContactInfo</a>*@
        </div>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">VISIT US</th>
                        <th scope="col">CONTACT US</th>
                        <th scope="col">EMAIL US</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.Address</td>
                        <td>@Model.PhoneNumber</td>
                        <td>@Model.Email</td>
                        <th>
                            <a asp-controller="contactInfo" asp-action="update" asp-area="admin" asp-route-id="@Model.Id" class="btn btn-secondary">Update</a>
                            <form class="d-inline" method="post" asp-controller="contactInfo" asp-action="delete" asp-area="admin" asp-route-id="@Model.Id">
                                <button class="btn btn-secondary" type="submit">Delete</button>
                            </form>
                        </th>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>


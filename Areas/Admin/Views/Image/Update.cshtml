@model Final_Back.Models.ImgContainer

<div class="col-lg-6">
    <div class="card">
        <div class="card-body">
            <div class="card-title">Add Customer</div>
            <hr>
            <form method="post" asp-action="update" asp-controller="customer" asp-area="admin">
                <div class="form-group">
                    <label asp-for="Image">Name</label>
                    <input asp-for="Image" class="form-control">
                    <span class="text-danger" asp-validation-for="Image"></span>
                </div>
                <div class="form-group">
                    <button class="btn btn-light px-4">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

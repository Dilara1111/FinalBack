@using Final_Back.Areas.Admin.ViewModels.Images;
@model ImageUpdateVM

<div class="col-lg-6">
    <div class="card">
        <div class="card-body">
            <hr>
            <form method="post" enctype="multipart/form-data" asp-action="update" asp-controller="image" asp-area="admin">
                <input type="hidden" asp-for="Image" />
                <div class="form-group">
                    <div>
                        <img style="width=100px;height=100px" src="~/assets/img/@Model.Image"/>
                    </div>
                    <label asp-for="PhotoFile">Photo</label>
                    <input asp-for="PhotoFile" class="form-control">
                    <span class="text-danger" asp-validation-for="PhotoFile"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-light px-4">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

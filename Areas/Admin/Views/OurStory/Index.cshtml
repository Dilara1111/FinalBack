@using Final_Back.Models;
@model OurStory
<div class="card">
    <div class="card-body">
        <div class="d-flex; justify-content-lg-between">
            <h5 class="card-title">Our Story</h5>
           
        </div>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description1</th>
                        <th scope="col">Description2</th>
                        <th scope="col">Photo</th>
                    </tr>
                </thead>
                <tbody>                    
                        <tr>
                            <th>@Model.Id</th>
                            <td>@Model.Name</td>
                            <td>@Model.Title</td>
                            <td>@Model.Description1</td>
                            <td>@Model.Description2</td>
                            <td><img style="width:100px" src="~/assets/img/@Model.FilePath"></td>
                            <th>
                                <a asp-controller="ourStory" asp-action="update" asp-area="admin" asp-route-id="@Model.Id" class="btn btn-secondary">Update</a>
                                <form class="d-inline" method="post" asp-controller="ourStory" asp-action="delete" asp-area="admin" asp-route-id="@Model.Id">
                                    <button class="btn btn-secondary" type="submit">Delete</button>
                                </form>
                            </th>
                        </tr>                    
                </tbody>
            </table>
        </div>
    </div>
</div>
